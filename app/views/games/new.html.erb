<h1>New game</h1>

<div class="letters-container">
  <% @letters.each do |letter| %>
    <p class="letter"><%= letter %></p>
  <% end %>
</div>

<h3>What is the longest word you can find?</h3>

<div class="form-container">
  <form action="score" method="POST" class="form">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag 'letters', @letters %>
    <input type="text" name="answer" class="input-text">
    <input type="submit" value="Play" class="submit">
  </form>
</div>
